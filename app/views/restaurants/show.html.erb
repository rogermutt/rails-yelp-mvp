<h1>Show restaurant detail</h1>

<p><%= @restaurant.name %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.address %></p>

<br>

<% @restaurant.reviews.each do |review|  %>
<p><%= review.rating %></p>
<p><%= review.content %></p>

<% end %>

<br>
<%= link_to 'Add review', new_restaurant_review_path(@restaurant), class: 'btn btn-info' %>
<br><br>
<%= link_to 'Back to results', restaurants_path %>
